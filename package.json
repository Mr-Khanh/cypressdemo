{
  "name": "cypressdemo",
  "version": "1.0.0",
  "description": "My first cypress project",
  "main": "index.js",
  "screenshotsFolder": "cypress/reports/mochareports/assets",
  "screenshotOnRunFailure": true,
  "scripts": {
    "cy:open": "cypress open",
    "clean:reports": "if exist cypress\\reports\\mocha rmdir /s/q cypress\\reports\\mocha && mkdir cypress\\reports\\mocha",
    "pretest": "npm run clean:reports",
    "scripts": "cypress run -s .\\cypress\\integration\\my-first-test-02.js -b chrome --headless",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "rename": "node cypress/support/rename.js",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test": "npm run scripts || npm run posttest ",
    "test:rename" : "npm run test && npm run rename"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cypress": "8.1.0",
    "cypress-multi-reporters": "1.5.0",
    "cypress-xpath": "1.6.2",
    "mocha": "9.0.3",
    "mochawesome": "6.2.2",
    "mochawesome-merge": "4.2.0",
    "mochawesome-report-generator": "5.2.0",
    "soft-assert": "0.2.6"
  }
}
